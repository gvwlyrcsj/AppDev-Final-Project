<%- include('partials/adminHeader') %>

<div class="container">
    <h2 class="mt-5">Manage Admins</h2>
    <form action="/searchUser" method="POST" class="mb-4">
        <div class="input-group">
            <input type="text" class="form-control" name="search" placeholder="Search by username">
            <div class="input-group-append">
                <button class="btn btn-primary" type="submit">Search</button>
            </div>
        </div>
    </form>

    <% if (users && users.length > 0) { %>
    <table class="table table-striped">
        <thead class="bg-secondary text-white">
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <td><%= user.role %></td>
                    <td>
                        <form action="/updateUserRole" method="POST" class="form-inline">
                            <input type="hidden" name="userId" value="<%= user.id %>">
                            <select name="role" class="form-control mr-2">
                                <option value="admin" <%= user.role === 'admin' ? 'selected' : '' %>>Admin</option>
                                <option value="user" <%= user.role === 'user' ? 'selected' : '' %>>User</option>
                            </select>
                            <button class="btn btn-primary" type="submit">Update</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <% } else { %>
    <p>No admin users found.</p>
    <% } %>
</div>

<%- include('partials/footer') %>
