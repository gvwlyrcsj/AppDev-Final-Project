<%- include('partials/adminHeader') %>

<div class="container mt-5">
    <h2>Manage Products</h2>

    <!-- Notifications for Low Stock -->
    <div id="notification-container">
        <% products.forEach((product) => { %>
        <% if (product.quantity_in_stock < 100) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            Warning: Low stock for product <strong><%= product.name %></strong> (ID: <%= product.id %>).
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <% } %>
        <% }) %>
    </div>

    <!-- Add Product Button -->
    <div class="mb-3">
        <a href="/addProduct" class="btn btn-primary">Add Product</a>
    </div>

    <!-- Products Table -->
    <table id="productsTable" class="table table-striped table-bordered">
        <thead class="bg-secondary text-white">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Quantity in Stock</th>
                <th>Unit</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach((product) => { %>
            <tr class="<%= product.quantity_in_stock < 100 ? 'table-danger' : '' %>">
                <td><%= product.id %></td>
                <td><%= product.name %></td>
                <td><%= product.description %></td>
                <td>â‚±<%= product.price %></td>
                <td><%= product.quantity_in_stock %></td>
                <td><%= product.unit %></td>
                <td>
                    <% if (product.imageUrl) { %>
                    <img src="<%= product.imageUrl %>" alt="<%= product.name %>" style="width: 100px; height: auto;">
                    <% } else { %>
                    No image
                    <% } %>
                </td>
                <td>
                    <a href="/updateProduct/<%= product.id %>" class="btn btn-primary btn-sm">Edit</a>
                    </a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('partials/adminFooter') %>

<!-- DataTables CSS and JS Libraries -->
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

<!-- Custom CSS -->
<style>
    .low-stock {
        background-color: #f8d7da; /* Light red color */
    }
</style>

<script>
    $(document).ready(function() {
        // Initialize DataTable
        $('#productsTable').DataTable({
            paging: true, // Enable pagination
            searching: true, // Enable searching/filtering
            ordering: true, // Enable column ordering
            order: [[0, 'asc']] // Default order by ID in ascending order
        });
    });
</script>
