<%- include('partials/adminHeader') %>

<div class="container my-5">
    <h1 class="text-center mb-4">Admin Dashboard</h1>

    <div class="row text-center">
         <!-- Daily Sales Section -->
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm" style="min-height: 250px;">
                <div class="card-body">
                    <h5 class="card-title">Daily Sales</h5>
                    <h3 class="card-text">	₱<%= dailySales %></h3>
                </div>
            </div>
        </div>

        <!-- Weekly Sales Section -->
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm" style="min-height: 250px;">
                <div class="card-body">
                    <h5 class="card-title">Weekly Sales</h5>
                    <h3 class="card-text">	₱<%= weeklySales %></h3>
                </div>
            </div>
        </div>

        <!-- Monthly Sales Section -->
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm" style="min-height: 250px;">
                <div class="card-body">
                    <h5 class="card-title">Monthly Sales</h5>
                    <h3 class="card-text">	₱<%= monthlySales %></h3>
                </div>
            </div>
        </div>

        <!-- Best Seller Section -->
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm" style="min-height: 250px;">
                <div class="card-body">
                    <h5 class="card-title">Best Seller</h5>
                    <h3 class="card-text"><%= bestSeller %></h3>
                    <div class="mt-3">
                        <img src="<%= bestSellerImage %>" alt="Best Seller <%= bestSeller %>" class="img-fluid rounded" style="width: 100px; height: auto;">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Past 7 Days' Income Chart Section -->
    <div class="my-5">
        <h2 class="text-center">Income for the Past 7 Days</h2>
        <canvas id="incomeChart" width="400" height="200"></canvas>
    </div>
</div>

<!-- Chart.js Library -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Correctly stringify the dates and sales data
    const salesDates = <%- JSON.stringify(salesDates) %>;
    const salesData = <%- JSON.stringify(salesData) %>;

    const ctx = document.getElementById('incomeChart').getContext('2d');
    const config = {
        type: 'bar',
        data: {
            labels: salesDates, // Dates for the past 7 days
            datasets: [{
                label: 'Daily Income',
                data: salesData, // Sales amounts for the past 7 days
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(255, 159, 64, 0.2)',
                    'rgba(255, 205, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(201, 203, 207, 0.2)'
                ],
                borderColor: [
                    'rgb(255, 99, 132)',
                    'rgb(255, 159, 64)',
                    'rgb(255, 205, 86)',
                    'rgb(75, 192, 192)',
                    'rgb(54, 162, 235)',
                    'rgb(153, 102, 255)',
                    'rgb(201, 203, 207)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    };

    new Chart(ctx, config);
</script>
