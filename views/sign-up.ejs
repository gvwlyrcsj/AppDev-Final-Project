<%- include('partials/header') %>   
<style>
    body {
        overflow: hidden; 
    }

    .signup-container {
        max-width: 350px; 
        margin: 20px auto; 
        padding: 30px; 
        background-color: #f8f9fa; 
        border-radius: 8px; 
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); 
    }

    .page-header {
        padding-bottom: 50px;
    }

    .signup-container h1 {
        font-size: 1.6rem; 
    }

    @media (max-width: 768px) {
        .signup-container {
            max-width: 90%; 
            margin: 20px auto; 
        }

        .page-header {
            padding-bottom: 30px; 
        }
    }

    @media (max-width: 576px) {
        .signup-container {
            padding: 20px; 
        }
    }
</style>
</head>

<body>
    <div class="jumbotron jumbotron-fluid page-header" style="margin-bottom: 90px;">
        <div class="container text-center py-5">
            <h1 class="text-white display-3 mt-lg-5">Sign Up</h1>
            <div class="d-inline-flex align-items-center text-white">
                <i class="fa fa-circle px-3"></i>
                <p class="m-0">Log In</p>
            </div>
        </div>
    </div>

    <div class="signup-container">
        <h1 class="mb-4 text-center">Sign Up</h1>
        <form action="/sign-up" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
            </div>
            <div class="form-group">
                <input type="email" class="form-control" id="email" name="email" placeholder="Email address" required>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="password" name="password" placeholder="Password (min. 8 characters)" minlength="8" required>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" minlength="8" required>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
        </form>
    </div>    

<%- include('partials/footer') %>  
